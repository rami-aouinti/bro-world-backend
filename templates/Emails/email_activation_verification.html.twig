<!DOCTYPE html>
{% set emailLocale = locale|default('en') %}
<html lang="{{ emailLocale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ 'emails.activation.title'|trans({}, 'emails', emailLocale) }}</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f5f7fa;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            color: #243447;
        }

        .preheader {
            display: none;
            visibility: hidden;
            opacity: 0;
            mso-hide: all;
            font-size: 1px;
            line-height: 1px;
            max-height: 0;
            max-width: 0;
            overflow: hidden;
        }

        table {
            border-spacing: 0;
            border-collapse: collapse;
        }

        .wrapper {
            width: 100%;
            background-color: #f5f7fa;
            padding: 24px 0;
        }

        .main {
            width: 100%;
            max-width: 620px;
            background-color: #ffffff;
            margin: 0 auto;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 18px 35px rgba(10, 22, 70, 0.08);
        }

        .header {
            background: linear-gradient(135deg, #0b5ed7 0%, #36a4ff 100%);
            padding: 32px 32px 24px;
            text-align: center;
            color: #ffffff;
        }

        .header h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
            letter-spacing: 0.4px;
        }

        .content {
            padding: 32px 32px 16px;
            text-align: left;
        }

        .content h2 {
            margin-top: 0;
            font-size: 20px;
            font-weight: 600;
            color: #0f2741;
        }

        .lead {
            font-size: 16px;
            line-height: 1.6;
            margin: 16px 0 16px;
        }

        .code-wrapper {
            text-align: center;
            margin: 28px 0 32px;
        }

        .code-box {
            display: inline-block;
            background: linear-gradient(135deg, #f0f6ff 0%, #dfeaff 100%);
            color: #0f2741;
            font-size: 26px;
            letter-spacing: 6px;
            padding: 18px 30px;
            border-radius: 12px;
            font-weight: 700;
            border: 1px solid rgba(49, 151, 255, 0.35);
        }

        .helper-text {
            font-size: 14px;
            line-height: 1.6;
            color: #516273;
        }

        .footer {
            padding: 24px 32px 32px;
            background-color: #f0f4f8;
            text-align: center;
        }

        .footer p {
            margin: 8px 0;
            font-size: 12px;
            color: #6b7a8c;
            line-height: 1.5;
        }

        @media only screen and (max-width: 600px) {
            .wrapper {
                padding: 16px 0;
            }

            .content {
                padding: 24px 20px 12px;
            }

            .code-box {
                font-size: 22px;
                letter-spacing: 4px;
                padding: 16px 20px;
            }

            .footer {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
<span class="preheader">{{ 'emails.activation.preheader'|trans({}, 'emails', emailLocale) }}</span>
<table class="wrapper" role="presentation" width="100%">
    <tr>
        <td align="center">
            <table class="main" role="presentation" width="100%">
                <tr>
                    <td class="header">
                        <h1>{{ 'emails.activation.title'|trans({}, 'emails', emailLocale) }}</h1>
                    </td>
                </tr>
                <tr>
                    <td class="content">
                        <h2>{{ 'emails.activation.greeting'|trans({'%name%': user.firstName}, 'emails', emailLocale) }}</h2>
                        <p class="lead">{{ 'emails.activation.intro'|trans({}, 'emails', emailLocale) }}</p>
                        <p class="lead">{{ 'emails.activation.instructions'|trans({}, 'emails', emailLocale) }}</p>
                        <div class="code-wrapper">
                            <span class="code-box">{{ verification_code }}</span>
                        </div>
                        <p class="helper-text">{{ 'emails.activation.ignore'|trans({}, 'emails', emailLocale) }}</p>
                    </td>
                </tr>
                <tr>
                    <td class="footer">
                        <p>{{ 'emails.common.automated_notice'|trans({}, 'emails', emailLocale) }}</p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>
