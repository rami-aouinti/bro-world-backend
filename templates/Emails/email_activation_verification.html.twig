<!DOCTYPE html>
{% set emailLocale = locale|default('en') %}
<html lang="{{ emailLocale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ 'emails.activation.title'|trans({}, 'emails', emailLocale) }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 30px auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        h1 {
            color: #333;
        }
        p {
            font-size: 16px;
            color: #555;
        }
        .code-box {
            display: inline-block;
            background-color: #f0f0f0;
            color: #222;
            font-size: 24px;
            letter-spacing: 4px;
            padding: 12px 24px;
            margin: 20px 0;
            border-radius: 6px;
            font-weight: bold;
        }
        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>{{ 'emails.activation.greeting'|trans({'%name%': user.firstName}, 'emails', emailLocale) }}</h1>
    <p>{{ 'emails.activation.intro'|trans({}, 'emails', emailLocale) }}</p>
    <p>{{ 'emails.activation.instructions'|trans({}, 'emails', emailLocale) }}</p>
    <div class="code-box">{{ verification_code }}</div>
    <p>{{ 'emails.activation.ignore'|trans({}, 'emails', emailLocale) }}</p>
    <p class="footer">{{ 'emails.common.automated_notice'|trans({}, 'emails', emailLocale) }}</p>
</div>
</body>
</html>
