<!DOCTYPE html>
{% set emailLocale = locale|default('en') %}
<html lang="{{ emailLocale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'emails.contact.title'|trans({}, 'emails', emailLocale) }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #333;
        }
        p {
            font-size: 16px;
            color: #555;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>{{ 'emails.contact.greeting'|trans({}, 'emails', emailLocale) }}</h1>
    <p>{{ 'emails.contact.message_from'|trans({'%name%': name, '%email%': email}, 'emails', emailLocale) }}</p>
    <br>
    <p>{{ message }}</p>
</div>
</body>
</html>
