<!DOCTYPE html>
{% set emailLocale = locale|default('en') %}
<html lang="{{ emailLocale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'emails.birthday.title'|trans({}, 'emails', emailLocale) }}</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #fff5f8;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            color: #402b3a;
        }

        .wrapper {
            width: 100%;
            padding: 24px 0;
        }

        .card {
            max-width: 560px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 20px;
            padding: 32px;
            text-align: center;
            box-shadow: 0 14px 30px rgba(255, 105, 180, 0.2);
        }

        h1 {
            color: #ff6f91;
            margin-bottom: 8px;
        }

        p {
            font-size: 16px;
            line-height: 1.6;
            margin: 12px 0;
        }

        .footer {
            margin-top: 24px;
            font-size: 12px;
            color: #7d6b75;
        }
    </style>
</head>
<body>
<div class="wrapper">
    <div class="card">
        <h1>{{ 'emails.birthday.title'|trans({}, 'emails', emailLocale) }}</h1>
        <p>{{ 'emails.birthday.greeting'|trans({'%name%': user.firstName}, 'emails', emailLocale) }}</p>
        <p>{{ 'emails.birthday.message'|trans({}, 'emails', emailLocale) }}</p>
        <p>{{ 'emails.birthday.closing'|trans({}, 'emails', emailLocale) }}</p>
        <div class="footer">
            {{ 'emails.common.automated_notice'|trans({}, 'emails', emailLocale) }}
        </div>
    </div>
</div>
</body>
</html>
